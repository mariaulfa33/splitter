    .tooltip .tooltiptext {
        visibility: hidden;
        width: 100%;
        background-color: rgb(87, 76, 76);
        color: #fff;
        text-align: left;
        border-radius: 6px;
        padding: 5px 0;

        /* Position the tooltip */
        position: absolute;
        z-index: 1;
        left: 110%;
    }

    .tooltip:hover .tooltiptext {
        visibility: visible;
    }
</style>
